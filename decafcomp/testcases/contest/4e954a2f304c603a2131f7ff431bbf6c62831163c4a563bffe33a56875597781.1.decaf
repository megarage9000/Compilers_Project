extern func print_string(string) void;
extern func print_int(int) void;

package factorialrecursive {
  func main() int {
    print_int(factorial(6));
    print_string("\n");
    print_int(factorial(-10));

    return (0);
  }
  func factorial(target int) int {
      if (target <= 0) {
          print_string("Bad input!\n");
          return (0);
      } else {
          if (target == 1) {
              return (target);
          }
      }

      return (target * factorial(target - 1));
  }
}
